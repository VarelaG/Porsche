---
const {image, title,description} = Astro.props;
---

<div class=" bg-[#141414] flex items-center  gap-6 py-8 relative px-40 shadow-lg">
    <div class="w-full md:w-1/3 h-64 overflow-hidden rounded-lg shadow-md">
        <img src={image} alt={title} class="w-full h-full object-cover">
    </div>
    <div class="w-1/2 pl-6 text-left md:w-2/3">
        <h2 class="px-20 text-3xl font-bold text-white mb-4">{title}</h2>
        <p class="px-20 text-white ">{description}</p>
    </div>
</div>


